{
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/tailwind.scss -o ./assets/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/tailwind.scss -o ./assets/css/styles.css --watch",
    "jekyll:build": "npm run build:css && bundle exec jekyll build",
    "jekyll:serve": "npm run build:css && bundle exec jekyll serve"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.14",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47"
  }
}
